# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                      controllers.Application.index()
GET        /login                 controllers.Application.login()
GET        /dummy                 controllers.Application.dummy()
GET        /testDatabase          controllers.Application.testDatabase()


# oAuth
GET        /oauth2callback        controllers.Application.oauth(error: String ?=null, code: String ?=null)
GET        /oauth2Access          controllers.Application.oauthAccess()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)

# Configuration for WebJars ( http://www.webjars.org/documentation )
GET        /webjars/*file         controllers.WebJarAssets.at(file)
GET        /vassets/*file         controllers.Assets.versioned(path="/public", file: Asset)